{
    "private": true,
    "engines": {
        "node": "~16",
        "npm": "~8"
    },
    "scripts": {
        "build": "dotnet fable . -o output -s --run esbuild output/App.js --bundle --sourcemap --format=esm --splitting --target=chrome98,firefox98 --outdir=deploy",
        "build-prod": "dotnet fable . -o output -s --run esbuild output/App.js --bundle --minify --format=esm --splitting --target=chrome98,firefox98 --outdir=deploy"
    },
    "devDependencies": {
        "esbuild": "^0.14.42",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "source-map-loader": "^3.0.0"
    }
}
